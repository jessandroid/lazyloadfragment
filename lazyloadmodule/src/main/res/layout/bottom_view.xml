<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/merchant_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/merchant_icon"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="23dp"/>
                <!--android:background="@mipmap/merchant_icon_press" -->

            <TextView
                android:id="@+id/merchant_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="AFragment"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/order_icon"
                android:layout_width="20dp"
                android:visibility="gone"
                android:layout_height="24dp"/>
                <!--android:background="@mipmap/order_icon_normal" -->

            <TextView
                android:id="@+id/order_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="BFragment"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privilege_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/privilege_icon"
                android:layout_width="24dp"
                android:visibility="gone"
                android:layout_height="24dp"/>
                <!--android:background="@mipmap/main_contact_find_undown" -->

            <TextView
                android:id="@+id/privilege_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="CFragment"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                ></ImageView>
                <!--android:background="@mipmap/me_icon_normal" />-->

            <TextView
                android:id="@+id/mine_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="DFragment"
               />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>